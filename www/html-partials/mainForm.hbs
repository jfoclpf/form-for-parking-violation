<div id="main_form" class="section">
  <h3>Imagens</h3>
  <div id="image_selector">
    <div class="row">
      <div class="form-group img-container col-md">
        <div class="form-group col-xs-12">
          <button aria-label="Adicionar Foto 1" type="button" class="btn btn-primary" id="addImg_1"><i class="fa fa-plus"></i></button>
          <button aria-label="Remover Foto 1" type="button" class="btn btn-primary" id="remImg_1"><i class="fa fa-minus"></i></button>
        </div>
        <!-- [html-validate-disable-next attribute-allowed-values] -->
        <img alt="Imagem 1" id="myImg_1" src="" class="col-xs-12">
      </div>
      <div class="form-group img-container col-md">
        <div class="form-group col-xs-12">
          <button aria-label="Adicionar Foto 2" type="button" class="btn btn-primary" id="addImg_2"><i class="fa fa-plus"></i></button>
          <button aria-label="Remover Foto 2" type="button" class="btn btn-primary" id="remImg_2"><i class="fa fa-minus"></i></button>
        </div>
        <!-- [html-validate-disable-next attribute-allowed-values] -->
        <img alt="Imagem 2" id="myImg_2" src="" class="col-xs-12">
      </div>
      <div class="form-group img-container col-md">
        <div class="form-group col-xs-12">
          <button aria-label="Adicionar Foto 3" type="button" class="btn btn-primary" id="addImg_3"><i class="fa fa-plus"></i></button>
          <button aria-label="Remover Foto 3" type="button" class="btn btn-primary" id="remImg_3"><i class="fa fa-minus"></i></button>
        </div>
        <!-- [html-validate-disable-next attribute-allowed-values] -->
        <img alt="Imagem 3" id="myImg_3" src="" class="col-xs-12">
      </div>
      <div class="form-group img-container col-md">
        <div class="form-group col-xs-12">
          <button aria-label="Adicionar Foto 4" type="button" class="btn btn-primary" id="addImg_4"><i class="fa fa-plus"></i></button>
          <button aria-label="Remover Foto 4" type="button" class="btn btn-primary" id="remImg_4"><i class="fa fa-minus"></i></button>
        </div>
        <!-- [html-validate-disable-next attribute-allowed-values] -->
        <img alt="Imagem 4" id="myImg_4" src="" class="col-xs-12">
      </div>
    </div>
  </div>

  <hr>

  <h3>Dados do veículo</h3>
  <div class="row">

    <div id="plateDiv" class="form-group col-sm">
      <label for="plate">Matrícula</label>
      <div>Formato Livre <input type="checkbox" id="free_plate"></div>
      <input class="form-control input-lg mandatory" maxlength="8"
             id="plate" name="Matrícula do veículo" type="text" required>
    </div>

    <div class="col-sm d-flex align-items-end">
      <div class="form-group w-100">
        <label for="carmake">Marca</label>
        <input class="form-control input-lg" id="carmake"
               name="Marca do veículo" placeholder="Opel" type="text">
      </div>
    </div>

    <div class="col-sm d-flex align-items-end">
      <div class="form-group w-100">
        <label for="carmodel">Modelo</label>
        <input class="form-control input-lg" id="carmodel"
               name="Modelo do veículo" placeholder="Corsa" type="text">
      </div>
    </div>
  </div>

  <hr>

  <h3>Data e local</h3>

  <div class="row">
    <div class="col-md">
      <button aria-label="Atualizar Data e Local" type="button" class="btn btn-primary ml-2 mb-3" id="getCurrentAddresBtn"><i class="fa fa-refresh"></i></button>
    </div>

    <div class="form-group col-md-3">
      <label for="date">Data </label>
      <input class="form-control input-lg mandatory" type="text" id="date" name="Data" required>
    </div>

    <div class="form-group col-md-3">
      <label for="time">Hora</label>
      <input class="form-control input-lg mandatory" id="time" name="Hora" type="time">
    </div>

    <div class="form-group col-md-6">
      <label for="locality">Concelho</label>
      <input size="35" class="form-control input-lg mandatory"
             id="locality" name="Concelho" placeholder="Oeiras" type="text" required>
    </div>

    <div class="col-md-3 d-flex align-items-end">
      <div class="form-group w-100">
        <label for="street">Local (rua, avenida, travessa, etc.)</label>
        <input size="35" class="form-control input-lg mandatory"
               id="street" name="Local da ocorrência" placeholder="Rua do Ouro" type="text" required>
      </div>
    </div>

    <div class="col-md-3 d-flex align-items-end">
      <div class="form-group w-100">
        <label for="street_number">Junto ao Número</label>
        <input size="4" class="form-control input-lg"
               id="street_number" name="Número postal do Local da Ocorrência" type="text">
      </div>
    </div>
   </div>

   <hr>

   <h3>Base legal</h3>

   <div class="row">
      <div class="form-group col-sm">
        <label for="penalties">Tipo de Ocorrência</label>
        <select class="form-control input-lg"
          data-mobile="true"
          data-multiple-separator="; "
          data-none-selected-text="Nenhuma selecionada"
          id="penalties" name="Tipo de Ocorrência" multiple size="1">
        </select>
      </div>
    </div>

    <hr class="citizenDiv">

    <h3 class="citizenDiv">Autoridade</h3>

    <div class="row citizenDiv">
      <div class="form-group col-sm">
        <p>Esta lista é atualizada em função do Concelho da ocorrência</p>
        <select class="form-control input-lg mandatory"
                id="authority" name="Autoridade">
        </select>
      </div>
  </div>

  <hr>
  <button aria-label="Gerar mensagem a enviar" type="button" class="btn btn-success" id="generate_message">Gerar texto</button>
</div>
